-#  This file is app/views/movies/index.html.haml
%h1 All Movies
%p
%dl
  - params.each do |key, value|
    %dt= key
    %dd= value
%p
%dl
  - session.each do |key, value|
    %dt= key
    %dd= value
%p
%dl
  - flash.each do |key, value|
    %dt= key
    %dd= value
= form_tag movies_path + "/ratings", :method => :delete do
  Include:
  - @all_ratings.each do |rating|
    = rating
    - if session[:ratings] && session[:ratings].has_key?(rating)
      = check_box_tag "ratings[#{rating}]", 1, true
    - else
      = check_box_tag "ratings[#{rating}]", 1, false
  = submit_tag 'Refresh', :id => "ratings_submit"

%table#movies
  %thead
    %tr
      - if(session[:sortby] && session[:sortby][/^title/] == "title")
        %th{:class => "hilite"}= link_to "Movie Title", movies_path + "/sortby?sortby=title", :id => "title_header"
      - else
        %th{:class => ""}= link_to "Movie Title", movies_path + "/sortby?sortby=title", :id => "title_header"
      %th Rating
      - if(session[:sortby] && session[:sortby][/^release_date/] == "release_date")
        %th{:class => "hilite"}= link_to "Release Date", movies_path + "/sortby?sortby=release_date", :id => "release_date_header"
      - else
        %th{:class => ""}= link_to "Release Date", movies_path + "/sortby?sortby=release_date", :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
