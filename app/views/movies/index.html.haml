-#  This file is app/views/movies/index.html.haml
%h1 All Movies
= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]"
  = submit_tag 'Refresh', :id => "ratings_submit"

%table#movies
  %thead
    %tr
      - if(@highlight == "title")
        %th{:class => "hilite"}= link_to "Movie Title", movies_path + "/title", :id => "title_header"
      - else
        %th{:class => ""}= link_to "Movie Title", movies_path + "/title", :id => "title_header"
      %th Rating
      - if(@highlight == "release")
        %th{:class => "hilite"}= link_to "Release Date", movies_path + "/release", :id => "release_date_header"
      - else
        %th{:class => ""}= link_to "Release Date", movies_path + "/release", :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
